<Window x:Class="ChamadosAPI.Registro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChamadosAPI"
        mc:Ignorable="d"
        Title="Registro" Height="450" Width="800">
    <Grid>
        <StackPanel Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}">
            <TextBlock Text="Usuário:" TextAlignment="Center"/>
            <TextBox x:Name="UsernameTextBox" Margin="10" Width="476"/>
            <TextBlock Text="Senha:" TextAlignment="Center"/>
            <PasswordBox x:Name="PasswordBox" Margin="10" Width="476"/>
            <TextBlock Text="Email:" TextAlignment="Center"/>
            <TextBox x:Name="EmailTextBox" Margin="10" Width="476"/>
            <Button Content="Criar Conta" Click="RegisterButton_Click" Width="476"/>
        </StackPanel>
    </Grid>
</Window>
